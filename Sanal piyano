        def do_key(e):
            if e.name=="a":
                self.connecter_main_one_do()
                self.la7_1.setStyleSheet("""font-size:25px;
                              background-color:red;
                              padding:10px;
                              color:black;
                              font-weight:bold
                               """)
                timer=Timer(1,reset)
                timer.start()
        keyboard.on_press(do_key)    
